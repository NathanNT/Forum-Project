<%= form_tag url_for(action: 'create'), method: "post" do %>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh">
 
  <div class="container-flex w-100 m-0 p-0">

      <div class="row justify-content-center m-0 p-0">
      <div class="col-11 col-sm-11 col-lg-8 text-center shadow-sm bg-light rounded p-0">
         <% if @user.errors.any? %>
 <div class="alert alert-danger m-0" role="alert">
  <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
      </div>
    </div>



  <div class="row justify-content-center m-0 p-0" style="margin-top: 20px!important; margin-bottom: 20px!important">

    <div class="col-11 col-sm-12 col-lg-8 text-center shadow-sm bg-light rounded pt-2">

      <h2 class="h1-responsive font-weight-bold text-center my-4">Sign in</h2>
      <p class="text-center w-responsive mx-auto mb-5">Crée un compte :</p>

      <div class="row justify-content-center p-0 m-0">
        <div class="col-9 ">
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Prénom</span>
            </div>
            <input type="text" name="firstname" id="title" class="form-control mr-3" placeholder="Prénom" aria-label="Titre" aria-describedby="basic-addon1">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">Nom</span>
            </div>
            <input type="text" name="secondname" id="title" class="form-control" placeholder="Nom" aria-label="Titre" aria-describedby="basic-addon1">
          </div>

          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text" id="basic-addon1">@</span>
            </div>
            <input type="text" name="email" id="title" class="form-control" placeholder="E-mail" aria-label="Titre" aria-describedby="basic-addon1">
          </div>


          <div class="input-group">
            <input type="password" name="password" id="title" class="form-control mb-3" placeholder="Mot de passe" aria-label="Titre" aria-describedby="basic-addon1">
          </div>

          <div class="input-group">
            <input type="password" name="passwordverif" id="title" class="form-control mb-3" placeholder="Mot de passe verification" aria-label="Titre" aria-describedby="basic-addon1">
          </div>

        </div>
      </div>
      <button type="submit" name="commit" class="btn btn-primary mb-5">Submit</button>
    </div>
    <div class="mt-3">
    </div>


  </div>
</div>
</div>



<% end %>
<p>
<%=flash[:error]%>
</p>