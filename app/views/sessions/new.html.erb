<%= form_tag url_for(action: 'create'), method: "post" do %>

  <div class="container-fluid d-flex justify-content-center">
    <div class="row ">
      <div class="row ">
          <div class="md-form mb-0">

          </div>
        </div>
      </div>
      <div class="col-md-8 text-center shadow-sm m-0 p-0 bg-light roundedpt-5">

  <h2 class="h1-responsive font-weight-bold text-center my-4">Sign up</h2>
  <p class="text-center w-responsive mx-auto mb-5">Connecte toi :</p>

        <div class="row justify-content-center p-0 m-0">
          <div class="col-9 ">


            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">@</span>
              </div>
              <input type="text" name="email" id="title" class="form-control" placeholder="E-mail" aria-label="Titre" aria-describedby="basic-addon1">
            </div>


            <div class="input-group">
              <input type="text" name="password" id="title" class="form-control mb-3" placeholder="Mot de passe" aria-label="Titre" aria-describedby="basic-addon1">
            </div>


          </div>
        </div>
        <button type="submit" name="commit" class="btn btn-primary mb-5">Submit</button>
      </div>
      <div class="mt-3">
      </div>


    </div>
  </div>



<% end %>